<style>
    @import url('https://fonts.googleapis.com/css?family=Open+Sans');

    a.nav-link{
        font-family: 'Open Sans'
    }
</style>


<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: {{site.NavColor}};">
    <a class="navbar-brand font-weight-bolder" href="/">
        <img src="{{site.Logo}}" alt="Logo" width="50px" height="50px">
        {{site.SiteName}}
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item {{#if active.Home}}active{{/if}}">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item {{#if active.Products}}active{{/if}}">
                <a class="nav-link" href="/products">Products</a>
            </li>
            <li class="nav-item {{#if active.Reviews}}active{{/if}}">
                <a class="nav-link" href="/reviews">Reviews</a>
            </li>
            {{#if user}}
                <li class="nav-item {{#if active.Sales}}active{{/if}}">
                    <a class="nav-link" href="/sales">{{#if admin}}Sales{{else}}Orders{{/if}}</a>
                </li>
            {{/if}}
            {{#if admin}}
                <li class="nav-item {{#if active.site}}active{{/if}}">
                    <a class="nav-link" href="/site">Site</a>
                </li>
                <li class="nav-item {{#if active.Logs}}active{{/if}}">
                    <a class="nav-link" href="/logs">Logs</a>
                </li>
                <li class="nav-item {{#if active.users}}active{{/if}}">
                    <a class="nav-link" href="/users">Users</a>
                </li>
            {{/if}}
            <li class="nav-item {{#if active.Contact}}active{{/if}}">
                <a class="nav-link" href="/Contact">Contact</a>
            </li>
            {{#if user}}
                <li class="nav-item {{#if active.User}}active{{/if}}">
                    <div class="dropdown nav-link">
                        <a class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{user}}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            {{#if admin}}
                            {{else}}
                                <a class="dropdown-item" href="/ShoppingCart">Cart {{#if cart}}({{length cart}}){{/if}}</a>
                            {{/if}}
                            <a class="dropdown-item" href="/account">Account</a>
                            <a class="dropdown-item" href="/Logout">Logout</a>
                        </div>
                    </div>
                </li>
            {{else}}
                <li class="nav-item {{#if active.Login}}active{{/if}}">
                    <a class="nav-link" href="/Loginpage">Login/Register</a>
                </li>
            {{/if}}
        </ul>
    </div>
</nav>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    let swalcall = () => {
        swal("{{currentMessage}}")
    };
        {{#if currentMessage}}
        swalcall();
        {{/if}}
</script>
