<style>
    @import url('https://fonts.googleapis.com/css?family=Open+Sans');

    a.nav-link {
        font-family: 'Open Sans'
    }
</style>


<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: {{site.NavColor}};">
    <a class="navbar-brand font-weight-bolder" href="/">
        <img src="{{site.Logo}}" alt="Logo" height="50px">
        {{site.SiteName}}
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item {{#if active.Home}}active{{/if}}">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item {{#if active.Products}}active{{/if}}">
                <a class="nav-link" href="/products">Products</a>
            </li>
            <li class="nav-item {{#if active.Reviews}}active{{/if}}">
                <a class="nav-link" href="/reviews">Reviews</a>
            </li>
            <!--            DISABLED-->
                <!--            {{#if user}}-->
            <!--                <li class="nav-item {{#if active.Sales}}active{{/if}}">-->
            <!--                    <a class="nav-link" href="/sales">{{#if admin}}Sales{{else}}Orders{{/if}}</a>-->
            <!--                </li>-->
                <!--            {{/if}}-->
            {{#if admin}}
                <li class="nav-item {{#if active.site}}active{{/if}}">
                    <a class="nav-link" href="/site">Site</a>
                </li>
                <li class="nav-item {{#if active.Logs}}active{{/if}}">
                    <a class="nav-link" href="/logs">Logs</a>
                </li>
                <li class="nav-item {{#if active.users}}active{{/if}}">
                    <a class="nav-link" href="/users">Users</a>
                </li>
                <li class="nav-item {{#if active.Emails}}active{{/if}}">
                    <a class="nav-link" href="/emails">Emails</a>
                </li>
                <li class="nav-item {{#if active.Images}}active{{/if}}">
                    <a class="nav-link" href="/images">Images</a>
                </li>
            {{/if}}
            <li class="nav-item {{#if active.Contact}}active{{/if}}">
                <a class="nav-link" href="/Contact">Contact</a>
            </li>
            {{#if user}}
                <li class="nav-item {{#if active.User}}active{{/if}}">
                    <div class="dropdown nav-link">
                        <a class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                           aria-expanded="false">
                            {{user}}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            {{#if admin}}
                            {{else}}
                                <a class="dropdown-item" href="/ShoppingCart">Cart {{#if cart}}
                                    ({{length cart}}){{/if}}</a>
                            {{/if}}
                            <a class="dropdown-item" href="/account">Account</a>
                            <a class="dropdown-item" href="/Logout">Logout</a>
                        </div>
                    </div>
                </li>
            {{else}}
                <li class="nav-item {{#if active.Login}}active{{/if}}">
                    <a class="nav-link" href="/Loginpage">Login</a>
                </li>
            {{/if}}
        </ul>
    </div>
</nav>

{{#if active.Home}}
    {{#if user}}{{else}}
        <div class="w-100 text-center" id="mainDiv">
            <div class="row justify-content-center">
                <p class="lead">Please subscribe to our newsletter for updates and deals!</p>
<!--                <a class="lead float-right" id="collapse">âœ–</a>-->
            </div>
            <form action="/subscribe" method="post" class="form">
                <div class="form-group row text-center justify-content-center">
                    <div class="col-3">
                        <label class="sr-only" for="email">Email:</label>
                        <input class="form-control" placeholder="Email" id="email" name="email" type="Email"
                               required>
                    </div>
                    <button class="btn btn-info" type="submit">Subscribe</button>
                </div>
            </form>
        </div>
        <a href="#close" class="text-center" id="collapse" style="margin-bottom: 8px;">Close</a>
    {{/if}}
{{/if}}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    let swalcall = () => {
        swal("{{currentMessage}}")
    };
        {{#if currentMessage}}
        swalcall();
        {{/if}}
</script>
